/* USER CODE BEGIN 4 */
void UART_SendMessage(int can_id, uint8_t* data, int dlc)
{
    char buffer[128];
    int len = snprintf(buffer, sizeof(buffer), "ID:%d DLC:%d Data:", can_id, dlc);

    for (int i = 0; i < dlc; i++)
    {
        len += snprintf(buffer + len, sizeof(buffer) - len, " %d", data[i]);
    }
    strcat(buffer, "\r\n");

    HAL_UART_Transmit(&huart6, (uint8_t*)buffer, strlen(buffer), HAL_MAX_DELAY);
    char test_message[] = "Test UART \r\n";
    HAL_UART_Transmit(&huart6, (uint8_t*)test_message, sizeof(test_message) - 1, HAL_MAX_DELAY);
}
/* USER CODE END 4 */

